{
  "manifest_version": 3,
  "name": "Zhihu Content Filter & Ad Remover",
  "version": "0.2.0",
  "description": "Filter Zhihu content by keywords and browsing history, remove ads automatically.",
  "permissions": ["storage"],
  "host_permissions": ["https://*.zhihu.com/*"],
  "content_scripts": [
    {
      "matches": ["https://*.zhihu.com/*"],
      "js": [
        "src/storage.js",
        "src/matcher.js",
        "src/content.js"
      ],
      "css": ["src/styles.css"],
      "run_at": "document_idle"
    }
  ],
  "options_page": "options/options.html"
}
